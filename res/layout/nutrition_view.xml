<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:id="@+id/cardView">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:baselineAligned="false" android:padding="5dp"
            android:orientation="vertical">
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView" android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp">
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="250dp"
                        android:id="@+id/productImage" android:background="#dddddd" android:layout_marginBottom="5dp"/>
                <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                              android:background="#aaffffff"
                              android:baselineAligned="false"
                              android:focusableInTouchMode="true" android:orientation="horizontal">
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="Brand" android:id="@+id/brand" android:lines="1"
                                  android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="@android:style/TextAppearance.Large"
                                  android:text="Product Name" android:id="@+id/productName" android:lines="2"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="wrap_content" android:layout_weight="3"
                            >
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="Avg. Price" android:id="@+id/avgPriceLabel" android:lines="1"
                                  android:layout_gravity="right"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="$7.99"
                                  android:id="@+id/avgPrice" android:lines="1" android:layout_gravity="right"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:baselineAligned="false"
                        android:layout_marginBottom="5dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Size"
                                android:id="@+id/size" android:layout_marginBottom="5dp" android:layout_gravity="left"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="Category" android:id="@+id/category" android:lines="1"
                                  android:textAppearance="@android:style/TextAppearance.Medium"
                                />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Manufacturer"
                                android:id="@+id/manufacturer"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                                  android:layout_height="wrap_content" android:layout_weight="1">
                        <ImageView
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:id="@+id/imageView2"
                                android:layout_gravity="center_horizontal"
                                android:background="#dddddd"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="0dp"
                                  android:text="0-00000-00000-0"
                                  android:textStyle="italic"
                                  android:id="@+id/upc"
                                  android:lines="1"
                                  android:layout_weight="1"
                                  android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="2dp" android:background="#dddddd" android:id="@+id/linearLayout"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Nutrition Facts"
                            android:id="@+id/nutritionFactsLabel" android:textStyle="bold"
                            />
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Serving Size "
                                android:id="@+id/servingSizeLabel" android:layout_column="0" android:layout_span="2"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="1 Cup"
                                android:id="@+id/servingSize" android:layout_column="2" android:textStyle="italic"/>
                    </LinearLayout>
                    <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Calories "
                                    android:id="@+id/caloriesLabel" android:textStyle="bold" android:layout_column="0"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="155"
                                    android:id="@+id/calories" android:layout_column="1" android:textStyle="italic"
                                    android:layout_gravity="right"
                                    android:textAppearance="@android:style/TextAppearance.Holo.Medium"/>
                        </LinearLayout>
                    <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="8dp" android:background="#000000"
                                >
                    </LinearLayout>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Amount Per Serving"
                            android:id="@+id/amountPerServingLabel" android:layout_column="0" android:textStyle="bold"
                            android:layout_span="10"/>
                    <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Total Fat "
                                android:id="@+id/totalFatLabel"

                                android:layout_marginRight="10dp"
                                android:textStyle="bold"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="1g"
                                android:id="@+id/totalFatAmount" android:textStyle="italic"
                                android:layout_alignParentTop="true" android:layout_toRightOf="@+id/totalFatLabel"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="10%"
                                android:id="@+id/totalFatPercent"
                                android:textStyle="bold|italic" android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="    Saturated Fat"
                                android:id="@+id/saturatedFatLabel"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginRight="10dp"
                                android:textStyle="bold"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="0.5g"
                                android:id="@+id/saturatedFatAmount"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@+id/saturatedFatLabel"
                                android:textStyle="italic"/>
                        <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="5%"
                                    android:id="@+id/saturatedFatPercent"
                                    android:textStyle="bold|italic" android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium"
                                  android:text="    Monounsaturated Fat"
                                  android:id="@+id/monounsaturatedFatLabel"
                                  android:layout_marginRight="10dp"
                                  android:textStyle="bold"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium"
                                  android:text="0.5g"
                                  android:id="@+id/monounsaturatedFatAmount"
                                  android:textStyle="italic"
                                  android:layout_toRightOf="@+id/monounsaturatedFatLabel"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="5%"
                                  android:id="@+id/monounsaturatedFatPercent"
                                  android:gravity="right"
                                  android:textStyle="bold|italic" android:layout_alignParentTop="true"
                                  android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:orientation="horizontal" android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium"
                                  android:text="    Polyunsaturated Fat" android:id="@+id/polyunsaturatedFatLabel"
                                  android:layout_alignParentLeft="true"
                                  android:layout_alignParentTop="true" android:layout_marginRight="10dp"
                                  android:textStyle="bold"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="0g"
                                  android:id="@+id/polyunsaturatedFatAmount" android:layout_column="4"
                                  android:textStyle="italic" android:layout_alignParentTop="true"
                                  android:layout_toRightOf="@+id/polyunsaturatedFatLabel"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="0%"
                                  android:id="@+id/polyunsaturatedFatPercent" android:layout_column="5" android:gravity="right"
                                  android:layout_alignParentTop="true" android:layout_alignParentRight="true"
                                  android:textStyle="bold|italic"/>
                    </RelativeLayout>
                    <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.v7.widget.CardView>